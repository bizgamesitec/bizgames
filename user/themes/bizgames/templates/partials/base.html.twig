{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getLanguage ?: 'en' }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{{ site.title|e('html') }}</title>
    {% include 'partials/metadata.html.twig' %}
    <meta name="viewport" content="width=device-width, initial-scale = 1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="icon" type="image/png" href="{{ url('theme://images/favicon.png') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />

    <!-- SOCIAL -->
  	<meta property="og:url" content="{{ base_url_absolute }}">
  	<meta property="og:title" content="{{ site.title }}">
  	<meta property="og:site_name" content="{{ site.title }}">
  	<meta property="og:image" content="{{ base_url_absolute }}{{ url('theme://images/social-share.png') }}">
  	<meta property="og:image:type" content="image/png">
  	<meta property="og:image:width" content="900">
  	<meta property="og:image:height" content="517">
  	<meta name="robots" content="index, follow">
  	<meta name="author" content="{{ site.author.name }}"> <!-- DESENVOLVIDO POR RODRIGO CICHETTO -->

    <!-- Google -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-51864400-18', 'auto');
      ga('send', 'pageview');
    </script>


    {% block stylesheets %}

        {% do assets.addCss('theme://css/custom.css', 100) %}
        {% do assets.addCss('theme://css/materialize.min.css') %}
        {% do assets.addCss('theme://css/font-awesome.min.css') %}
        {% do assets.addCss('theme://css/animations.css') %}
        {% do assets.addCss('theme://css/owl.carousel.min.css') %}

        {% if browser.getBrowser == 'msie' and browser.getVersion == 10 %}
            {% do assets.addCss('theme://css/nucleus-ie10.css') %}
        {% endif %}
        {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
            {% do assets.addCss('theme://css/nucleus-ie9.css') %}
        {% endif %}
    {% endblock %}
    {{ assets.css() }}

    {% block javascripts %}
        {% do assets.addJs('theme://js/jquery-3.2.1.min.js') %}
        {% do assets.addJs('theme://js/stars.js') %}
        {% do assets.addJs('theme://js/rellax.min.js') %}
        {% do assets.addJs('theme://js/materialize.min.js') %}
        {% do assets.addJs('theme://js/owl.carousel.min.js') %}
        {% do assets.addJs('theme://js/jquery.mask.js') %}
        {% do assets.addJs('theme://js/custom.js') %}
        {% do assets.addJs('theme://js/tictactoe.js') %}
    {% endblock %}
    {{ assets.js() }}

{% endblock head %}
</head>
<body id="top" class="{{ page.header.body_classes }}">
    <div id="sb-site">
        {% block header %}
        <header id="header">
            <nav>
              <div class="nav-wrapper container">
                <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
                {% block header_extra %}{% endblock %}
                {% block header_navigation %}
                {% include 'partials/navigation.html.twig' %}
                {% endblock %}
              </div>
            </nav>
        </header>
        {% endblock %}

        {% block showcase %}{% endblock %}


        {% block body %}
        <section id="body" class="{{ class }}">
            {% block content %}{% endblock %}
        </section>
        {% endblock %}

        {% block footer %}
          {% include 'partials/footer.html.twig' %}
        {% endblock %}
    </div>

    {% block bottom %}
        {{ assets.js('bottom') }}
    {% endblock %}

    <script src='{{ url('theme://js/jquery.parallax.min.js') }}'></script>
    <script>
      $('#scene').parallax();
    </script>

</body>
</html>
